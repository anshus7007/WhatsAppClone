<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_search"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_profile"/>
    
    <TextView
        android:id="@+id/usernameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_toEndOf="@+id/profile_image_search"
        android:layout_centerInParent="true"
        android:layout_marginStart="12dp"
        android:textSize="19sp"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_profile"
        app:civ_border_width="12dp"
        app:civ_border_color="#05df29"
        android:layout_below="@+id/usernameSearch"
        android:layout_marginTop="12dp"
        android:layout_marginStart="-17dp"
        android:layout_toEndOf="@+id/profile_image_search"
        tools:ignore="UnknownIdInLayout"
        android:visibility="gone"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/ic_profile"
        app:civ_border_width="12dp"
        app:civ_border_color="#bfbfbf"
        android:layout_below="@+id/usernameSearch"
        android:layout_marginTop="12dp"
        android:layout_marginStart="-17dp"
        android:layout_toEndOf="@+id/profile_image_search"
        tools:ignore="UnknownIdInLayout"
        android:visibility="gone"
        />



    <TextView
        android:id="@+id/message_last"
        android:layout_below="@+id/usernameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/profile_image_search"
        android:layout_toEndOf="@+id/profile_image_search"
        android:textSize="19sp"
        android:padding="6dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="#000000"

        />



</RelativeLayout>